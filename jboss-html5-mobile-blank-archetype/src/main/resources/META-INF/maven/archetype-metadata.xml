<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="jboss-javaee6-html5-mobile-archetype"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <requiredProperties>
    <requiredProperty key="name">
      <defaultValue>Java EE 6 HTML5 Mobile Web Application</defaultValue>
    </requiredProperty>
    <requiredProperty key="enterprise">
      <defaultValue>false</defaultValue>
    </requiredProperty>
    <requiredProperty key="tableSuffix">
      <defaultValue>html5mobi</defaultValue>
    </requiredProperty>
    <requiredProperty key="javaee6_web_spec_enterprise_version">
      <defaultValue>3.0.0.Final-redhat-1</defaultValue>
    </requiredProperty>
    <requiredProperty key="org_hibernate_validator_enterprise_version">
      <defaultValue>4.2.0.Final-redhat-1</defaultValue>
    </requiredProperty>    
  </requiredProperties>
  <fileSets>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <excludes>
        <exclude>**/*</exclude>
      </excludes>
    </fileSet>
    <fileSet encoding="UTF-8">
      <directory>src/main/webapp</directory>
       <includes>
        <include>**/libs/*.js</include>
        <include>**/css/*.min.css</include>
        <include>**/css/images/*.png</include>
        <include>**/WEB-INF/*.*</include>
       </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <excludes>
        <exclude>**/*</exclude>
      </excludes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/test/qunit</directory>
      <excludes>
        <exclude>**/*.html</exclude>
        <exclude>**/test/*.*</exclude>
      </excludes>
    </fileSet>
    <fileSet encoding="UTF-8">
      <directory>src/test/resources</directory>
      <excludes>
        <include>**/*.xml</include>
      </excludes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>*.md</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8">
      <directory>.settings/</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>    
  </fileSets>
</archetype-descriptor>
